{
  "name": "agentflow",
  "scopeName": "source.agentflow",
  "patterns": [
    { "include": "#comments" },
    { "include": "#keywords" },
    { "include": "#strings" },
    { "include": "#numbers" },
    { "include": "#operators" },
    { "include": "#variables" },
    { "include": "#functions" },
    { "include": "#step-labels" }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.double-slash.agentflow",
          "match": "//.*$"
        },
        {
          "name": "comment.block.agentflow",
          "begin": "/\\*",
          "end": "\\*/"
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.agentflow",
          "match": "\\b(flow|steps|models|config|storage|constants|types|import|from|when|then|otherwise|goto|return|if|else|for|in|while|together|call|with|as|expect|increment|decrement|append|delete|to|set)\\b"
        },
        {
          "name": "keyword.other.agentflow",
          "match": "\\b(ask|tell)\\b"
        },
        {
          "name": "keyword.operator.agentflow",
          "match": "\\b(and|or|not|contains)\\b"
        },
        {
          "name": "constant.language.agentflow",
          "match": "\\b(true|false|null|undefined)\\b"
        },
        {
          "name": "support.type.agentflow",
          "match": "\\b(String|Number|Boolean|Json|Array|Object|Date|Email|Url|Phone)\\b"
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.agentflow",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.agentflow",
              "match": "\\\\."
            }
          ]
        },
        {
          "name": "string.quoted.single.agentflow",
          "begin": "'",
          "end": "'",
          "patterns": [
            {
              "name": "constant.character.escape.agentflow",
              "match": "\\\\."
            }
          ]
        },
        {
          "name": "string.quoted.template.agentflow",
          "begin": "`",
          "end": "`",
          "patterns": [
            {
              "name": "variable.other.agentflow",
              "match": "\\$[a-zA-Z_][a-zA-Z0-9_\\.]*"
            },
            {
              "name": "constant.character.escape.agentflow",
              "match": "\\\\."
            }
          ]
        }
      ]
    },
    "numbers": {
      "name": "constant.numeric.agentflow",
      "match": "\\b\\d+(\\.\\d+)?([eE][+-]?\\d+)?\\b"
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.comparison.agentflow",
          "match": "==|!=|<=|>=|<|>"
        },
        {
          "name": "keyword.operator.logical.agentflow",
          "match": "&&|\\|\\|"
        },
        {
          "name": "keyword.operator.arithmetic.agentflow",
          "match": "\\+|-|\\*|/|%|\\^"
        },
        {
          "name": "keyword.operator.ternary.agentflow",
          "match": "\\?|:"
        },
        {
          "name": "keyword.operator.spread.agentflow",
          "match": "\\.\\.\\."
        }
      ]
    },
    "variables": {
      "patterns": [
        {
          "name": "variable.other.agentflow",
          "match": "\\$[a-zA-Z_][a-zA-Z0-9_]*"
        },
        {
          "name": "variable.language.agentflow",
          "match": "\\$(answer|storage|constants)\\b"
        },
        {
          "name": "variable.other.property.agentflow",
          "match": "\\$[a-zA-Z_][a-zA-Z0-9_]*\\.[a-zA-Z_][a-zA-Z0-9_\\.]*"
        }
      ]
    },
    "functions": {
      "patterns": [
        {
          "name": "entity.name.function.agentflow",
          "match": "\\b(claude|chatgpt|gemini|user|human)(\\.[a-zA-Z_][a-zA-Z0-9_]*)?"
        }
      ]
    },
    "step-labels": {
      "name": "entity.name.label.agentflow",
      "match": "#[a-zA-Z_][a-zA-Z0-9_]*"
    }
  }
}
