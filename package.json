{
  "name": "@goobits/docs-engine",
  "version": "2.0.3",
  "description": "Battery-included documentation system for SvelteKit with markdown rendering, screenshots, and search",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./server": {
      "import": "./dist/server/index.js",
      "types": "./dist/server/index.d.ts"
    },
    "./plugins": {
      "import": "./dist/plugins/index.js",
      "types": "./dist/plugins/index.d.ts"
    },
    "./components": {
      "import": "./dist/components/index.js",
      "types": "./dist/components/index.d.ts"
    },
    "./components/*": "./dist/components/*.svelte",
    "./utils": {
      "import": "./dist/utils/index.js",
      "types": "./dist/utils/index.d.ts"
    },
    "./config": {
      "import": "./dist/config/index.js",
      "types": "./dist/config/index.d.ts"
    },
    "./styles": "./dist/styles/index.css",
    "./styles/*": "./dist/styles/*"
  },
  "files": [
    "dist",
    "src/lib/styles"
  ],
  "scripts": {
    "build": "tsup",
    "build:all": "pnpm -r build",
    "dev": "tsup --watch",
    "dev:all": "pnpm -r --parallel dev",
    "release": "pnpm install && pnpm -r --filter @goobits/docs-engine build && pnpm -r --filter @goobits/docs-engine-cli build && node scripts/bump-if-published.mjs && npm publish --access public && (cd packages/docs-engine-cli && npm publish --access public)",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest watch",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "check-links": "node scripts/check-links.mjs",
    "jscpd": "jscpd src",
    "madge": "madge --circular --extensions ts,js src",
    "madge:graph": "madge --image graph.svg --extensions ts,js src",
    "prebuild": "npm run check-links",
    "prepublishOnly": "npm run build",
    "prepare": "husky || true"
  },
  "dependencies": {
    "@goobits/themes": "^1.3.2",
    "dompurify": "^3.3.1",
    "glob": "^13.0.0",
    "katex": "^0.16.28",
    "lru-cache": "^11.2.5",
    "minisearch": "^7.2.0",
    "p-limit": "^7.2.0",
    "p-retry": "^7.1.1",
    "pino": "^10.3.0",
    "pino-pretty": "^13.1.3",
    "rehype-katex": "^7.0.1",
    "remark-directive": "^4.0.0",
    "remark-math": "^6.0.0",
    "sharp": "^0.34.5",
    "shiki": "^3.21.0",
    "typescript": "^5.9.3",
    "unist-util-visit": "^5.1.0",
    "yaml": "^2.8.2"
  },
  "peerDependencies": {
    "@lucide/svelte": "^0.563.1",
    "@sveltejs/kit": "^2.0.0",
    "mermaid": "^11.0.0",
    "svelte": "^5.0.0"
  },
  "peerDependenciesMeta": {
    "mermaid": {
      "optional": true
    }
  },
  "optionalDependencies": {
    "@rollup/rollup-linux-arm64-gnu": "4.57.0",
    "chokidar": "^5.0.0",
    "playwright": "^1.58.0"
  },
  "keywords": [
    "sveltekit",
    "documentation",
    "markdown",
    "mdsvex",
    "docs",
    "screenshots",
    "search"
  ],
  "license": "MIT",
  "author": "GooBits",
  "publishConfig": {
    "access": "public"
  },
  "pnpm": {
    "overrides": {
      "unist-util-visit": "^5.0.0"
    }
  },
  "lint-staged": {
    "*.{ts,js}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.svelte": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,css,md}": [
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@testing-library/svelte": "^5.3.1",
    "@types/mdast": "^4.0.4",
    "@types/node": "^25.1.0",
    "@types/unist": "^3.0.3",
    "@typescript-eslint/eslint-plugin": "^8.54.0",
    "@typescript-eslint/parser": "^8.54.0",
    "@vitest/coverage-v8": "^4.0.18",
    "@vitest/ui": "^4.0.18",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-security": "^3.0.1",
    "eslint-plugin-svelte": "^3.14.0",
    "happy-dom": "^20.4.0",
    "husky": "^9.1.7",
    "jscpd": "^4.0.7",
    "lint-staged": "^16.2.7",
    "madge": "^8.0.0",
    "prettier": "^3.8.1",
    "prettier-plugin-svelte": "^3.4.1",
    "svelte": "^5.48.5",
    "svelte-eslint-parser": "^1.4.1",
    "ts-morph": "^27.0.2",
    "tsup": "^8.5.1",
    "unified": "^11.0.5",
    "vitest": "^4.0.18"
  }
}
